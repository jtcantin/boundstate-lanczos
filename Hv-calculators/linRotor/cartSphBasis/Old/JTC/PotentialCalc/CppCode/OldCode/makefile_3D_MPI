CC=mpicxx
CFLAGS=-c -Wall
LDFLAGS=
SOURCES=3DChargePot.cpp gridFcns.cpp Cvectors.cpp
OBJECTS=$(SOURCES:.cpp=.o)
EXECUTABLE=3DChargePot

all: $(SOURCES) $(EXECUTABLE)

$(EXECUTABLE): $(OBJECTS)
	$(CC) $(LDFLAGS) $(OBJECTS) -o $@

.cpp.o:
	$(CC) $(CFLAGS) $< -o $@

clean:
	rm -f $(OBJECTS) $(EXECUTABLE)

