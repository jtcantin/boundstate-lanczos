CC=g++
SUP_PATH1= ../vectorClasses/
SUP_PATH2= ../supportingRoutines/
INCLUDES= -I $(SUP_PATH1) -I $(SUP_PATH2)
CFLAGS=-c -Wall -fopenmp -DLINUX -ggdb -O0 $(INCLUDES)
LIB_SOURCES= $(SUP_PATH1)matvec2.cpp  $(SUP_PATH2)rotmat.cpp
LDFLAGS=-fopenmp -framework Accelerate
SOURCES= rotMatTest.cpp $(LIB_SOURCES)
OBJECTS=$(SOURCES:.cpp=.o)
EXECUTABLE=rotMatTest

all: $(SOURCES) $(EXECUTABLE)

$(EXECUTABLE): $(OBJECTS)
	$(CC) $(LDFLAGS) $(OBJECTS) -o $@

.cpp.o:
	$(CC) $(CFLAGS) $< -o $@

clean:
	rm -f $(OBJECTS) $(EXECUTABLE)


