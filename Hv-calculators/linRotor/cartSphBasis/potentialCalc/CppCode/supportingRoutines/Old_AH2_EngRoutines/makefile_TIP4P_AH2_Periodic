CC=g++
SUP_PATH1= ../vectorClasses/
SUP_PATH2= ../supportingRoutines/
INCLUDES= -I $(SUP_PATH1) -I $(SUP_PATH2)
CFLAGS=-c -Wall -fopenmp -DLINUX -ggdb -O0 $(INCLUDES)
LIB_SOURCES= $(SUP_PATH1)matvec2.cpp  $(SUP_PATH2)rotmat.cpp $(SUP_PATH2)energyRoutines_periodic.cpp $(SUP_PATH2)gridFcns.cpp
LDFLAGS=-fopenmp -framework Accelerate
SOURCES= TIP4P_AH2_EngRoutines_test2.cpp $(LIB_SOURCES)
OBJECTS=$(SOURCES:.cpp=.o)
EXECUTABLE=TIP4P_AH2_EngRoutinesTest_Periodic_Para

all: $(SOURCES) $(EXECUTABLE)

$(EXECUTABLE): $(OBJECTS)
	$(CC) $(LDFLAGS) $(OBJECTS) -o $@

.cpp.o:
	$(CC) $(CFLAGS) $< -o $@

clean:
	rm -f $(OBJECTS) $(EXECUTABLE)


