$(EXECUTABLE): $(OBJECTS)
	$(CC) -static $(OBJECTS) -o $@ $(LDFLAGS)

.cpp.o:
	$(CC) -static $< -o $@ $(CFLAGS)

.f.o:
	$(FC) -static $< -o $@ $(FCFLAGS)

